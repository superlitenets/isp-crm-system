# ===========================================
# ISP CRM & TICKETING SYSTEM - CONFIGURATION
# ===========================================

# Database Configuration
POSTGRES_DB=isp_crm
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=change_this_secure_password

# Security (IMPORTANT: Change these!)
SESSION_SECRET=generate_a_random_32_character_string_here
ENCRYPTION_KEY=optional_separate_key_for_settings_encryption

# ===========================================
# SMS GATEWAY OPTIONS (Choose one)
# ===========================================

# Option 1: Advanta SMS (Kenya - Recommended)
ADVANTA_API_KEY=your_api_key
ADVANTA_PARTNER_ID=your_partner_id
ADVANTA_SHORTCODE=YourSenderID
ADVANTA_URL=https://quicksms.advantasms.com/api/services/sendsms/

# Option 2: Custom SMS Gateway (Any REST API)
# SMS_API_URL=https://your-sms-provider.com/api/send
# SMS_API_KEY=your_api_key
# SMS_SENDER_ID=YourSenderID
# SMS_API_METHOD=POST
# SMS_CONTENT_TYPE=json

# Option 3: Twilio
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# WHATSAPP WEB INTEGRATION
# ===========================================

# Enable WhatsApp Web notifications (true/false)
WHATSAPP_ENABLED=true

# Default country code for phone formatting (e.g., 254 for Kenya)
WHATSAPP_DEFAULT_COUNTRY_CODE=254

# ===========================================
# SMARTOLT INTEGRATION (Network Monitoring)
# ===========================================

# SmartOLT API URL (your SmartOLT instance)
SMARTOLT_API_URL=https://your-instance.smartolt.com

# SmartOLT API Key (from SmartOLT dashboard)
SMARTOLT_API_KEY=your_smartolt_api_key

# ===========================================
# BIOMETRIC DEVICE INTEGRATION
# ===========================================

# API Key for biometric webhook endpoints (minimum 16 characters)
# Devices will use this key to authenticate push requests
BIOMETRIC_API_KEY=generate_a_secure_16_plus_character_key

# ===========================================
# M-PESA INTEGRATION (Kenya)
# ===========================================

# Sandbox/Production Mode
MPESA_ENV=sandbox

# Daraja API Credentials
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your_passkey
MPESA_INITIATOR_NAME=testapi
MPESA_INITIATOR_PASSWORD=your_initiator_password

# Callback URLs (replace with your domain)
MPESA_CALLBACK_URL=https://yourdomain.com/mpesa-callback.php
MPESA_TIMEOUT_URL=https://yourdomain.com/mpesa-timeout.php
MPESA_RESULT_URL=https://yourdomain.com/mpesa-result.php

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Timezone (for attendance, SLA calculations)
APP_TIMEZONE=Africa/Nairobi

# Debug Mode (set to false in production)
APP_DEBUG=false

# Base URL (for email links, callbacks)
APP_URL=https://yourdomain.com
