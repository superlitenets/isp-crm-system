# Database Configuration
DATABASE_URL=postgresql://ispcrm:ispcrm_password@db:5432/ispcrm
PGHOST=db
PGPORT=5432
PGDATABASE=ispcrm
PGUSER=ispcrm
PGPASSWORD=ispcrm_password

# Session Configuration
SESSION_SECRET=change-this-to-a-secure-random-string

# SMS Gateway Configuration (Advanta Kenya)
SMS_GATEWAY_URL=https://api.advanta.co.ke/v1/messages
SMS_SENDER_ID=YourCompany
SMS_API_KEY=your-sms-api-key
SMS_PARTNER_ID=your-partner-id

# WhatsApp Gateway Configuration
# Providers: meta, waha, ultramsg, custom
WHATSAPP_PROVIDER=meta
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your-consumer-key
MPESA_CONSUMER_SECRET=your-consumer-secret
MPESA_SHORTCODE=your-shortcode
MPESA_PASSKEY=your-passkey
MPESA_CALLBACK_URL=https://your-domain.com/api/mpesa/callback
MPESA_ENVIRONMENT=sandbox

# SmartOLT Configuration
SMARTOLT_API_URL=https://your-smartolt-instance.com/api
SMARTOLT_API_KEY=your-smartolt-api-key

# Biometric Device Configuration
# ZKTeco Push Protocol
ZKTECO_PUSH_SERVER_PORT=8088

# Application Settings
APP_NAME="ISP CRM System"
APP_URL=http://localhost:8080
APP_DEBUG=false
APP_TIMEZONE=Africa/Nairobi
