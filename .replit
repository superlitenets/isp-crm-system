modules = ["php-8.4", "nodejs-20", "python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["github:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start PHP Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "WhatsApp Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "OLT Session Manager"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "License Server"

[[workflows.workflow]]
name = "Start PHP Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t public public/router.php"
waitForPort = 5000

[[workflows.workflow]]
name = "WhatsApp Service"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd whatsapp-service && node index.js"
waitForPort = 3001

[[workflows.workflow]]
name = "OLT Session Manager"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd olt-service && npm start"
waitForPort = 3002

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "License Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:8080 -t license-server/public"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 80

[[ports]]
localPort = 5000
