[[workflows.workflow]]
name = "Start PHP Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -c php.ini -S 0.0.0.0:5000 -t public"
waitForPort = 5000

[[workflows.workflow]]
name = "WhatsApp Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd whatsapp-service && npm start"
waitForPort = 3001

[workflows.workflow.metadata]
