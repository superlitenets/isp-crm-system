server default {
    listen {
        type = auth
        ipaddr = *
        port = 1812
        limit {
            max_connections = 16
            lifetime = 0
            idle_timeout = 30
        }
    }

    listen {
        type = acct
        ipaddr = *
        port = 1813
        limit {
        }
    }

    listen {
        type = auth
        ipv6addr = ::
        port = 1812
        limit {
            max_connections = 16
            lifetime = 0
            idle_timeout = 30
        }
    }

    listen {
        type = acct
        ipv6addr = ::
        port = 1813
        limit {
        }
    }

    listen {
        type = coa
        ipaddr = *
        port = 3799
        limit {
            max_connections = 16
            lifetime = 0
            idle_timeout = 30
        }
    }

    authorize {
        filter_username
        preprocess
        suffix
        
        # SQL first - looks up known users and sets reply attributes
        sql
        
        # If SQL didn't find the user (no password set), set expired pool attributes
        if (!&control:Cleartext-Password) {
            update reply {
                Framed-Pool := "expired-pool"
                Mikrotik-Rate-Limit := "128k/128k"
                Mikrotik-Group := "expired"
                Session-Timeout := 300
                Acct-Interim-Interval := 60
                Reply-Message := "Account not found - redirecting to portal"
            }
        }
        
        # Accept ALL users - control access via SQL attributes (pool, rate limit, etc)
        update control {
            Auth-Type := Accept
        }
        
        expiration
        logintime
    }

    authenticate {
        # All authentication is handled via SQL attributes
        # PAP/CHAP/MSCHAP removed to allow walled garden for invalid passwords
        Auth-Type Accept {
            ok
        }
    }

    preacct {
        preprocess
        suffix
        files
    }

    accounting {
        detail
        unix
        sql
        exec
        attr_filter.accounting_response
    }

    session {
        sql
    }

    post-auth {
        update {
            &reply: += &session-state:
        }
        sql
        exec
        remove_reply_message_if_eap
        
        # Post-Auth-Type REJECT not needed - all users accepted via Auth-Type Accept
    }

    pre-proxy {
    }

    post-proxy {
        eap
    }

    recv-coa {
        suffix
    }

    send-coa {
        ok
    }
}
