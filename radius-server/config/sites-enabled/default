server default {
    listen {
        type = auth
        ipaddr = *
        port = 1812
        limit {
            max_connections = 16
            lifetime = 0
            idle_timeout = 30
        }
    }

    listen {
        type = acct
        ipaddr = *
        port = 1813
        limit {
        }
    }

    listen {
        type = auth
        ipv6addr = ::
        port = 1812
        limit {
            max_connections = 16
            lifetime = 0
            idle_timeout = 30
        }
    }

    listen {
        type = acct
        ipv6addr = ::
        port = 1813
        limit {
        }
    }

    listen {
        type = coa
        ipaddr = *
        port = 3799
        limit {
            max_connections = 16
            lifetime = 0
            idle_timeout = 30
        }
    }

    authorize {
        filter_username
        preprocess
        suffix
        files
        sql
        expiration
        logintime
        pap
        chap
        mschap
        
        # Accept unknown users with expired-pool for captive portal
        if (!&control:Auth-Type) {
            update control {
                Auth-Type := Accept
            }
            update reply {
                Framed-Pool := "expired-pool"
                Mikrotik-Rate-Limit := "128k/128k"
                Session-Timeout := 300
                Acct-Interim-Interval := 60
                Reply-Message := "Unknown user - portal redirect"
            }
        }
    }

    authenticate {
        Auth-Type PAP {
            pap
        }
        Auth-Type CHAP {
            chap
        }
        Auth-Type MS-CHAP {
            mschap
        }
    }

    preacct {
        preprocess
        suffix
        files
    }

    accounting {
        detail
        unix
        sql
        exec
        attr_filter.accounting_response
    }

    session {
        sql
    }

    post-auth {
        update {
            &reply: += &session-state:
        }
        sql
        exec
        remove_reply_message_if_eap
    }

    pre-proxy {
    }

    post-proxy {
        eap
    }

    recv-coa {
        suffix
    }

    send-coa {
        ok
    }
}
