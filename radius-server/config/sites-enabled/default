server default {
    listen {
        type = auth
        ipaddr = *
        port = 1812
        limit {
            max_connections = 16
            lifetime = 0
            idle_timeout = 30
        }
    }

    listen {
        type = acct
        ipaddr = *
        port = 1813
        limit {
        }
    }

    listen {
        type = auth
        ipv6addr = ::
        port = 1812
        limit {
            max_connections = 16
            lifetime = 0
            idle_timeout = 30
        }
    }

    listen {
        type = acct
        ipv6addr = ::
        port = 1813
        limit {
        }
    }

    listen {
        type = coa
        ipaddr = *
        port = 3799
        limit {
            max_connections = 16
            lifetime = 0
            idle_timeout = 30
        }
    }

    authorize {
        filter_username
        preprocess
        suffix
        
        # SQL first - looks up known users and sets reply attributes
        sql
        
        # If SQL didn't find the user (no password set), handle based on user type
        if (!&control:Cleartext-Password) {
            # Check if this is a hotspot user:
            # 1. MAC address as username (typical hotspot CHAP login)
            # 2. Username matches Calling-Station-Id (hotspot MAC auth)
            # Hotspot users must be REJECTED when not active so MikroTik
            # redirects them to the captive portal for payment
            if ("%{User-Name}" =~ /^([0-9A-Fa-f]{2}[:-]){5}[0-9A-Fa-f]{2}$/ || \
                (&Calling-Station-Id && "%{User-Name}" == "%{Calling-Station-Id}")) {
                update reply {
                    Reply-Message := "Hotspot user not authorized - redirecting to portal"
                }
                reject
            }
            
            # PPPoE/other unknown users - give limited access via expired pool
            update reply {
                Framed-Pool := "expired-pool"
                Mikrotik-Rate-Limit := "128k/128k"
                Session-Timeout := 300
                Acct-Interim-Interval := 60
                Reply-Message := "Account not found - redirecting to portal"
            }
        }
        
        # Accept users - control access via SQL attributes (pool, rate limit, etc)
        update control {
            Auth-Type := Accept
        }
        
        expiration
        logintime
    }

    authenticate {
        # All authentication is handled via SQL attributes
        # PAP/CHAP/MSCHAP removed to allow walled garden for invalid passwords
        Auth-Type Accept {
            ok
        }
    }

    preacct {
        preprocess
        suffix
        files
    }

    accounting {
        detail
        unix
        sql
        exec
        attr_filter.accounting_response
    }

    session {
        sql
    }

    post-auth {
        update {
            &reply: += &session-state:
        }
        sql
        exec
        remove_reply_message_if_eap
        
        # Post-Auth-Type REJECT not needed - all users accepted via Auth-Type Accept
    }

    pre-proxy {
    }

    post-proxy {
        eap
    }

    recv-coa {
        suffix
    }

    send-coa {
        ok
    }
}
